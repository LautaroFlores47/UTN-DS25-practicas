generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1:N Author -> Book
model Author {
  id          Int    @id @default(autoincrement())
  name        String @unique
  nationality String?
  books       Book[]
}

model Book {
  id            Int         @id @default(autoincrement())
  title         String
  price         Decimal     @db.Decimal(10,2)
  stock         Int         @default(0)
  publishedYear Int?
  imageUrl      String?     

  authorId      Int
  author        Author      @relation(fields: [authorId], references: [id])
  categories    Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  role     Role   @default(USER)
  // createdAt/updatedAt opcional:
  // createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt
}

